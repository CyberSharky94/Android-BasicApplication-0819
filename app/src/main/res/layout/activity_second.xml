<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/txtSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_below="@+id/txtSecond"
        android:id="@+id/imgDrone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_drone"
        />

    <EditText
        android:id="@+id/txtEditText"
        android:layout_below="@id/imgDrone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Message!"
        />

    <Button
        android:layout_below="@id/txtEditText"
        android:id="@+id/btnSubmit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/submit_btn"
        />

</RelativeLayout>